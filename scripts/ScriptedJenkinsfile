node {
    def mvnHome
    stage('Preparation') { // for display purposes
       checkout scm{}
    }
    stage('Build') {
        // Run build
        withEnv(["MVN_HOME=$mvnHome"]) {
            if (isUnix()) {
                sh ''
            } else {
                bat()
            }
        }
    }
    stage('Results') {
        //post-actions
    }
}
